{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    // "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "lib": ["ES2016", "ES2017", "dom"],
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node",
      "./node_modules/@webgpu/types",
      "src/lib/hwoa-rang-gpu/dist/@types"
    ]
  },
  "include": ["src"]
}
