{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    // "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "lib": ["ES2016", "ES2017", "dom"],
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./src/types.d.ts",
      "./npm_modules/@types/"
    ]
  },
  "include": [
    "src",
  ],
}