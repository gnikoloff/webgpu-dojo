{
  "name": "webgpu-sketch-dojo",
  "version": "0.0.1",
  "description": "WebGPU demos & examples written from scratch",
  "scripts": {
    "lint": "eslint src",
    "watch": "rollup --watch --c",
    "build": "NODE_ENV=production rollup --c",
    "start": "run-p build serve:docs",
    "start:local": "run-p watch serve:docs",
    "generate-demos": "node create-example-markdown-files.js",
    "copy-examples-definitions": "shx cp -r EXAMPLES_DEFINITIONS.json ./docs/_data/",
    "serve:docs": "cd ./docs && bundler exec jekyll serve",
    "build:docs": "run-p generate-demos copy-examples-definitions serve:docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gnikoloff/frontend-boilerplate.git"
  },
  "author": "Georgi Nikolov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gnikoloff/frontend-boilerplate/issues"
  },
  "homepage": "https://github.com/gnikoloff/frontend-boilerplate#readme",
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-strip": "^2.0.1",
    "@webgpu/glslang": "0.0.15",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "rollup": "^2.51.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-glslify": "^1.2.0",
    "rollup-plugin-import-css": "^2.0.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-uglify": "^6.0.4"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "typescript": "^4.3.2"
  }
}
